
<h2>Register Property</h2>


<form class="col-8">
  <div class="form-group row">
        <label class="col-4 col-form-label">Title:</label>
        <div class="col-8">
            <input id="txtTitle" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-4 col-form-label">Bedrooms:</label>
        <div class="col-8">
            <input id="txtBedrooms" type="number" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-4 col-form-label">Bathrooms:</label>
        <div class="col-8">
            <input id="txtBathrooms" type="number" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-4 col-form-label">Price:</label>
        <div class="col-8">
            <input id="txtPrice" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-4 col-form-label">Area (sqft):</label>
        <div class="col-8">
            <input id="txtArea" type="number" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-4 col-form-label">Image url:</label>
        <div class="col-8">
            <input id="txtImage" type="text" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-4 col-form-label">Description:</label>
        <div class="col-8">
            <textarea id="txtDescription" type="text" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-4">Parking included</label>
        <div class="col-8">
            <div class="custom-control custom-radio custom-control-inline">
                <input name="radio" id="radio_0" type="radio" class="custom-control-input" value="true">
                <label for="radio_0" class="custom-control-label">Yes</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input name="radio" id="radio_1" type="radio" class="custom-control-input" value="false">
                <label for="radio_1" class="custom-control-label">No</label>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-8 offset-4">
            <button type="button" id="btnSave" class="btn btn-info">Save Property</button>
        </div>
    </div>

</form>

@section Scripts {
    <script src="/js/register.js"></script>
}
<!-- 
    Property:
    - Price
    - Title
    - ImageUrl
    - Beds
    - Baths
    - Area (sqft)
    - Description
    - Parking Included   

-->